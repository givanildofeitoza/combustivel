  Result.NomeTanque := 'Tanque de Teste';
end;

{ TMockAbastecimentoRepositorio }

function TMockAbastecimentoRepositorio.ObterPorId(Id: Integer): TAbastecimento;
begin
  Result := TAbastecimento.Create;
  Result.Id := Id;
  Result.Valor := 100;
end;


